{
  "description": "opentui-dev hooks - cache refresh and learnings capture",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/opentui-session-start.js\"",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/opentui-learnings.js\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
