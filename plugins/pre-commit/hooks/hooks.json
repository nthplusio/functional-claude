{
  "description": "Pre-push hooks for typecheck, lint, and test validation",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/check-pre-push.js\"",
            "timeout": 600
          }
        ]
      }
    ]
  }
}
