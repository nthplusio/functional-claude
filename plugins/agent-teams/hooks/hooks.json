{
  "description": "Agent team deduplication guards, compaction recovery, and stale file cleanup",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "TeamCreate|Task",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/dedup-guard.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/post-compact-recovery.js\"",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/stale-cleanup.js\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
