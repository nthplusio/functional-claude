{
  "description": "WezTerm development hooks - backup verification and learnings capture",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/verify-wezterm-backup.js",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/check-wezterm-learnings.js",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
