{
  "description": "Development workflow hooks for plan validation",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/exit-plan-check.js\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
